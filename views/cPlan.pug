html
  head 
    title="L1Ds Service@"+isLoggedIn

    style
      include style.css
  body 
    div(class="container")
      h2(class="pb-2 border-bottom" style="color: white; text-align: left")="Create Plan"
      if error 
        p(class="alert alert-danger")=error
      else
        form(class="row g-3" method="post" action="create_plan")
          div(class="row-auto" style="color: white; text-align: left" )
            div(class="col-auto") 
                a()="MVP / Production BugFix Name" 
                input(type="text" class="form-control" name="MVPname" placeholder="eg. proto-Rel-1")
          div(class="row-auto" style="color: white; text-align: left")
            div(class="col-auto") 
                a()="MVP / Production BugFix Description"        
                textarea(rows='3' style='width: 100%' name='MVPdesc' placeholder="  eg. This proto application ..." )
          div(class="row-auto" style="color: white; text-align: left")
              div(class="col-auto") 

                div(class="col-auto")    
                  if appList
                      - var id=1     
                      table
                        tr
                          td= "No."
                          td= "Application"
                          td= "Description"

                        for app in appList
                          tr
                            td #{id++} 
                            td= app.Appname 
                            td= app.Appdesc
                if appList
                  a()="Plan Application  "  
                  select(name='MVPapp' value="-")  
                      each app in appList
                        option(value=app.Appname) #{app.Appname}                 
          div(class="row-auto" style="color: white; text-align: left")
              div(class="col-auto") 
                a()="Notes"
                textarea(rows='9' style='width: 100%' name='MVPnotes' placeholder= "Please provide new notes here..."  )
                

          div(class="row-auto" style="color: white; text-align: left")
              div(class="col-auto") 
                a()="Plan Start Date"  
                input( type="date" class="form-control" name="MVPstartDate" placeholder="")
          div(class="row-auto" style="color: white; text-align: left")
              div(class="col-auto") 
                a()="Plan End Date"  
                input( type="date" class="form-control" name="MVPendDate" placeholder="")
          div(class="row-auto")
              button(type="submit" class="btn-large btn-primary mb-3")="Create"
            
      a(href="/home")="Cancel"       
include footer.pug