html
  head
    title= "L1Ds Password Change@"+isLoggedIn
  style
      include style.css
  body
    div(class="container")
      h2(class="pb-2 border-bottom" style="color: white; text-align: left")="Update Account Info"

      form(class="row g-3" method="post" action="update_account")
        div(class="row-auto" style="color: white; text-align: left ")
           div(class="col-auto") 
              a()="User ID"  
              input( type="text" class="form-control" name="Uname" value=app.Uname readonly placeholder=app.Uname)
        div(class="row-auto" style="color: white; text-align: left ")
           div(class="col-auto") 
              a()="Email"  
              input( type="text" class="form-control" name="Uemail" value=app.Uemail placeholder=app.Uemail)
        div(class="row-auto" style="color: white; text-align: left ")
           div(class="col-auto") 
              a()="New Password"  
              input( type="password" class="form-control" name="Upass" value=app.Upass pattern="(?=.*)(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters")

        div(class="row-auto")
            button(type="submit" class="btn-large btn-primary mb-3")="Update"
      a(href="/home")="Cancel"  

include footer.pug