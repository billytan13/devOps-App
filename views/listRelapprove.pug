html
  head
    title= 'L1Ds Release@'+isLoggedIn
  style
      include style.css
  body
    div(class="container")
      h2(class="pb-2 border-bottom" style="color: white; text-align: left")="Step i of ii. Select Release Request to approve"
      - var id=1     
      table
        tr
          td= "No."
          td= "Release Name"
          td= "State"
          td= "Description"
          td= "Creator"
          td= "Codebase"
          td= "Release Type"
          td= "Deploy Type"
          
        for app in appList
          tr
            td #{id++} 
            td 
               a(href='/getRel/'+app.Crname) #{app.Crname}
            td= app.CrState
            td= app.Crdesc
            td= app.Crcreator
            td= app.CrCodebase
            td= app.CrRelType
            td= app.CrDeployType

      p
      h5(class="pb-2 border-bottom" style="color: white; text-align: left")="Next Step"	
      p( style="color: white; text-align: left")
        a="Click on the respective Release Name to approve the Request OR back to "
        a(href="/home")=" Home" 
include footer.pug