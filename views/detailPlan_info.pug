html
  head 
    title="L1Ds Service@"+isLoggedIn

    style
      include style.css
  body 
    div(class="container")
      h2(class="pb-2 border-bottom" style="color: white; text-align: left")="Update Plan"
      if error 
        p(class="alert alert-danger")=error
      else
        form(class="row g-3" method="post" action="no_action_update_plan")
          div(class="row-auto" style="color: white; text-align: left" )
            div(class="col-auto") 
                a()="MVP Name" 
                input(type="text" class="form-control" name="MVPname" value=app.MVPname  placeholder=app.MVPname readonly)
          div(class="row-auto" style="color: white; text-align: left")
            div(class="col-auto") 
                a()="MVP Description"        
                textarea(rows='3' style='width: 100%' name='MVPdesc' value=app.MVPdesc placeholder=app.MVPdesc )
          div(class="row-auto" style="color: white; text-align: left" )
            div(class="col-auto") 
                a()="MVP Application" 
                input(type="text" class="form-control" name="MVPapp" value=app.MVPapp placeholder=app.MVPapp readonly)
          div(class="row-auto" style="color: white; text-align: left" )
            div(class="col-auto") 
                a()="Associcated Internal Release" 
                input(type="text" class="form-control" name="MVPasRel" value=app.MVPasRel placeholder=app.MVPasRel readonly)
          div(class="row-auto" style="color: white; text-align: left" )
            div(class="col-auto") 
                a()="External Release Label" 
                input(type="text" class="form-control" name="MVPXname" value=app.MVPXname placeholder=app.MVPXname readonly)  
          div(class="row-auto" style="color: white; text-align: left" )
            div(class="col-auto") 
                a()="State" 
                input(type="text" class="form-control" name="MVPState" value=app.MVPState placeholder=app.MVPState readonly)   
          div(class="row-auto" style="color: white; text-align: left" )
            div(class="col-auto") 
                a()="Creator" 
                input(type="text" class="form-control" name="MVPcreator" value=app.MVPcreator placeholder=app.MVPcreator readonly)  
          div(class="row-auto" style="color: white; text-align: left")
            div(class="col-auto") 
              a()="Notes"
              textarea(rows='9' style='width: 100%' name='MVPnotes0' value= app.MVPnotes placeholder=app.MVPnotes Readonly )
              app.MVPnotes     
          div(class="row-auto" style="color: white; text-align: left")
            div(class="col-auto") 
               textarea(rows='3' style='width: 100%' name='MVPnotes1' placeholder= "Please provide new notes here...")
          div(class="row-auto" style="color: white; text-align: left")
            div(class="col-auto") 
                a()="MVP Start Date (YYYY-MM-DD)"  
                input( type="text" class="form-control" name="MVPstartDate" value=app.MVPstartDate+8 placeholder="YYYY-MM-DD" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}")
          div(class="row-auto" style="color: white; text-align: left")
            div(class="col-auto") 
                a()="MVP End Date (YYYY-MM-DD)"  
                input( type="text" class="form-control" name="MVPendDate" value=app.MVPendDate+8 placeholder=(app.MVPendDate+8) required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}")

          a(href="/home")="Cancel"      
include footer.pug