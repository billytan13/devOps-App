html
  head 
    title="L1Ds Service@"+isLoggedIn
  
    style
      include style.css
  body 
    div(class="container")
      h2(class="pb-2 border-bottom" style="color: white; text-align: left")="Unable to Deliver as the current Request is stale."
      h5(class="pb-2 border-bottom" style="color: red; text-align: left")="Release Detected:"
      form(class="row g-3")
        div(class="row-auto"  style="color: white; text-align: left; border-left: 25px solid yellow")
           div(class="col-auto") 
              a()="Current Release"
              input(type="text" class="form-control" name="CrXname"  placeholder=CrXname readonly)
              a()="Production Release"
              input(type="text" class="form-control" name="AppProduction"  placeholder=AppProduction readonly)
              a()="Production Internal Release"
              input(type="text" class="form-control" name="AppPrdBL"  placeholder=AppPrdBL readonly)

      a(href="/home")="Home to continue"       

include footer.pug